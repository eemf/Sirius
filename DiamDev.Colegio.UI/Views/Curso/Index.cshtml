@model PagedList.IPagedList<DiamDev.Colegio.Entities.Curso>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Curso Listado";
}

<div class="row">
    <div class="col-3">
        <a class="btn btn-block btn-primary" href="@Url.Action("Crear", "Curso")">
            Nuevo
            <i class="fas fa-arrow-circle-right"></i>
        </a>
    </div>
</div>
<br />
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Curso</h3>
        <div class="card-tools">
            <form action="" method="get" class="form-inline">
                <div class="input-group well">
                    <input type="text" class="form-control" id="search" name="search" placeholder="Buscar.." value="@Html.Raw(ViewBag.Search)" autocomplete="off" style="margin-bottom: 1px;">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-default">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="card-body table-responsive p-0">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Ciclo</th>
                    <th>Tipo de Curso</th>
                    <th>Curso</th>
                    <th>Grados</th>
                    <th>Curso Ministerial</th>
                    <th>Activo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Curso in Model)
                {
                    <tr>
                        <td>@(Curso.Ciclo == null ? "No Disponible" : Curso.Ciclo.Nombre)</td>
                        <td>@(Curso.Tipo == null ? "No Disponible" : Curso.Tipo.Nombre)</td>
                        <td>@Curso.Nombre</td>
                        <td>@(Curso.Grados == null ? 0 : Curso.Grados.Count())</td>
                        <td>@(Curso.Ministerial ? "Sí" : "No")</td>
                        <td>@(Curso.Activo ? "Sí" : "No")</td>
                        <td>
                            <span class="table-remove">
                                <a title="Editar" href="@Url.Action("Editar", "Curso", new { id = Curso.CursoId })" class="btn btn-primary btn-rounded btn-sm my-0"><i class="fas fa-pencil-alt"></i></a>
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="card-tools">
    Pagina @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index", new { search = ViewBag.Search, page, @class = "page-item" }))
</div>

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function ()
        {
            if ('@TempData["Curso-Success"]' == "OK")
            {
                toastr.success('El curso se guardó exitosamente');
            }
        });
    </script>
}