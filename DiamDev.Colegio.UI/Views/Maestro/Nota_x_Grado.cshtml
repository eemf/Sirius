@model PagedList.IPagedList<DiamDev.Colegio.Entities.GradoxCicloModel>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Notas Por Grado";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Notas</h3>
    </div>
    <div class="card-body table-responsive p-0">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Ciclo</th>                    
                    <th>Grado</th>
                    <th>Sección</th>
                    <th>Alumnos</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Grado in Model)
                {
                    <tr>
                        <td>@Grado.Ciclo</td>                        
                        <td>@Grado.Grado</td>
                        <td>@Grado.Seccion</td>
                        <td>@Grado.Alumno</td>
                        <td>
                            <span class="table-remove">
                                <a title="Notas x Alumno" href="@Url.Action("Nota_x_Alumno", "Maestro", new { id = Grado.GradoId, seccionId = Grado.SeccionId })" class="btn btn-primary btn-rounded btn-sm my-0"><i class="fas fa-book-open"></i></a>
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="card-tools">
    Pagina @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Nota_x_Grado", new { page, @class = "page-item" }))
</div>
