@model DiamDev.Colegio.Entities.Grado

<div class="row">
    <div class="col-12">
        <div class="form-group">
            <label class="control-label">
                Grado<span class="symbol required"></span>
            </label>
            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @placeholder = "Nombre del Grado", required = "required", autocomplete = "off" })
        </div>
    </div>
</div>
<div class="row">
    <div class="col-6">
        <div class="form-group">
            <label class="control-label">
                Colegiatura<span class="symbol required"></span>
            </label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Q</span>
                </div>
                @Html.TextBoxFor(model => model.Precio, new { @class = "form-control", @placeholder = "Colegiatura del Grado", required = "required", autocomplete = "off" })
            </div>
        </div>         
    </div>
</div>
<div class="row">
    <div class="col-6">
        <div class="form-group">
            <label class="control-label">
                Nivel Academico<span class="symbol required"></span>
            </label>
            @Html.DropDownList("NivelId", (SelectList)ViewBag.Niveles, "Seleccione un Nivel Academico", new { @class = "form-control select2bs4 required" })
        </div>
    </div>
    <div class="col-6">
        <div class="form-group">
            <label class="control-label">
                Jornada<span class="symbol required"></span>
            </label>
            @Html.DropDownList("JornadaId", (SelectList)ViewBag.Jornadas, "Seleccione una Jornada", new { @class = "form-control select2bs4 required" })
        </div>
    </div>
</div>
<div class="row">
    <div class="col-6">
        <div class="form-group">
            <label class="control-label">
                Activo
            </label>
            <div>
                <label class="radio-inline">
                    <input type="radio" class="grey" value="true" @ViewBag.ActivoSi name="activo" id="ActivoSi">
                    Sí
                </label>
                <label class="radio-inline">
                    <input type="radio" class="grey" value="false" @ViewBag.ActivoNo name="activo" id="ActivoNo">
                    No
                </label>
            </div>
        </div>
    </div>
</div>

